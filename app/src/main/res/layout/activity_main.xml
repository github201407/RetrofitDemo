<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mine.demo.retrofitdemo.MainActivity">

    <EditText
        android:id="@+id/inputUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="please input userName"
        android:text="github201407" />

    <Button
        android:id="@+id/getUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/inputUserName"
        android:text="Get Info" />

    <TextView
        android:id="@+id/showInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputUserName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showInfo"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getUserInfoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Info" />

        <Button
            android:id="@+id/getUserInfoGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HttpGet" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getIpInfo"
            android:text="getIpInfo" />
    </LinearLayout>

</RelativeLayout>
